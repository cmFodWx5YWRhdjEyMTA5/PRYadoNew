<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyClearEditText">
        <!--在attr标签下设置需要的自定义属性-->
        <!--此处定义了一个设置图形的颜色:circle_color属性,格式是color,代表颜色-->
        <!--格式有很多种,如资源id(reference)等等-->
        <attr name="leftIcon" format="reference" />

    </declare-styleable>

    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer" />
        <attr name="stroke_width" format="dimension" />
        <attr name="color_tick" format="color" />
        <attr name="color_checked" format="color" />
        <attr name="color_unchecked" format="color" />
        <attr name="color_unchecked_stroke" format="color" />
    </declare-styleable>

    <!--corner_color 边角颜色，
      scanner_color 扫描线颜色
      possible_result_color 扫描点颜色
      frame_color 扫描框边线颜色
      mask_color 模糊区域颜色
      label_text  框上方提示
  -->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color" />
        <attr name="laser_color" format="color" />
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color" />
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color" />
        <attr name="label_text" format="string" />
        <attr name="text1" format="string" />
        <attr name="text2" format="string" />
        <attr name="text3" format="string" />
        <attr name="label_text_size" format="float" />
    </declare-styleable>
    <declare-styleable name="CTTourHeaderScrollView">
        <attr name="top_offset" format="dimension" />
    </declare-styleable>

    <!--自定义属性集合:CircleImageView-->
    <!--在该集合下,设置不同的自定义属性-->
    <declare-styleable name="CircleImageView">
        <!--在attr标签下设置需要的自定义属性-->
        <!--此处定义了一个设置图形的颜色:circle_color属性,格式是color,代表颜色-->
        <!--格式有很多种,如资源id(reference)等等-->
        <attr name="border_color" format="color"/>
        <attr name="border_width" format="dimension" />
        <attr name="rect_RoundRadius" format="dimension" />

        <attr name="type">
            <enum name="none" value="0" />
            <enum name="circle" value="1" />
            <enum name="rounded_rect" value="2" />
        </attr>

    </declare-styleable>
</resources>