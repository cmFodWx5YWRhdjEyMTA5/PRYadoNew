<?xml version="1.0" encoding="utf-8"?>
<com.yado.pryado.pryadonew.ui.widgit.HeaderScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp"
    app:top_offset="@dimen/dimen_30dp">

    <com.yado.pryado.pryadonew.ui.widgit.EmptyLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linear_black_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_param_information"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/tv_device_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="设备编码  :  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_device_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="设备型号  :  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_date_of_production"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="生产日期  :  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="设备名称  :  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_device_producer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="设备厂家  :  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_date_of_operation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="投运日期  :  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_installed_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="安装地点:  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="所属单位  :  XXX"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_last_date_of_maintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="最后维护日期  :  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_maintainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:text="维护人  :  XXX"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dangers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_25dp"
                android:background="@drawable/text_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="隐患列表"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dangers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


</com.yado.pryado.pryadonew.ui.widgit.HeaderScrollView>