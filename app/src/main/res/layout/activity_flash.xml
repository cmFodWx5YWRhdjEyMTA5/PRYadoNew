<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_70dp"
        android:src="@drawable/img_logo_name" />


    <com.yado.pryado.pryadonew.ui.widgit.TitanicTextView
        android:id="@+id/titanic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="移动运维"
        android:textColor="#3a3939"
        android:textSize="50sp" />

    <yanzhikai.textpath.SyncTextPathView
        android:id="@+id/atpv_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:duration="3000"
        app:paintStrokeColor="#9ea9a76f"
        app:paintStrokeWidth="1dip"
        app:pathStrokeColor="@color/white"
        app:showPainter="true"
        app:text="珠海一多监测科技有限公司"
        app:textInCenter="true"
        app:textSize="@dimen/dimen_18sp" />

</RelativeLayout>