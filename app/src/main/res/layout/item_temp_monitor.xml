<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_point_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:gravity="center"
            android:text="测点名称"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_point_temp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#FAFAFA"
                android:gravity="center"
                android:text="测点温度"
                android:textColor="@color/blue_text" />

            <TextView
                android:id="@+id/tv_temp_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#FAFAFA"
                android:gravity="center"
                android:text="温升速率"
                android:textColor="@color/blue_text" />

            <LinearLayout
                android:id="@+id/ll_cal_temp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#FAFAFA"
                android:orientation="vertical"
                android:layout_marginLeft="1dp"
               android:gravity="center">

                <TextView
                    android:id="@+id/tv_cal_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推算柜内温度"
                    android:textColor="@color/blue_text" />

                <TextView
                    android:id="@+id/tv_recTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="2019/2/18"
                    android:textColor="@color/light_gray" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.6"
                android:background="#FAFAFA"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_state"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@drawable/ic_circle_green" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>